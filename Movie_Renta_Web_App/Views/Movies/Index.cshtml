@model Movie_Renta_Web_App.ViewModels.IndexMovieModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("NEW MOVIE", "New", "Movies", new {@class = "btn btn-primary" })

<div style="padding-top: 10px">
    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @*@foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }*@
        </tbody>
    </table>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {

            var table = $("#movies").DataTable({
                ajax: {
                    type: "GET",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    sAjaxDataProp: "",
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                var buttonDom = $(this);
                bootbox.confirm("Are You Sure You Want To Delete?",
                    function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/movies/" + buttonDom.attr("data-movie-id"),
                                method: "DELETE",
                                success: function () {
                                    table.row(buttonDom.parents("tr")).remove().draw();
                                }

                            });

                        }
                    });
            });


        });
    </script>
}
